{
  "name": "clean-node",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --watch --silent --colors --noStackTrace",
    "test:staged": "jest --passWithNoTests --findRelatedTests --silent --noStackTrace",
    "test:ci":"jest --coverage --silent --noStackTrace"
  },
  "standard":{
    "env":["jest"]
  },
  "keywords": [
    "lint",
    "git",
    "staged",
    "eslint",
    "prettier"
  ],
  "author": "Fernando Marca MagalhÃ£es",
  "license": "ISC",
  "husky":{
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push":"npm run test:ci"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "standard --fix",
      "npm run test:staged",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "lint-staged": "^11.0.0",
    "standard": "^16.0.3"
  }
}
